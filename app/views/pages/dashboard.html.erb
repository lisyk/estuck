<div class="row">
  <h2 class="text-center">Dashboard</h2>
  <div class="col-md-4">
    <h3>My books <%= link_to 'Add new book', new_book_path, class: "btn btn-success btn-sm"%></h3>
    <table class="table table-condensed">
     <thead>
       <tr>
         <th>ID</th>
         <th>Name</th>
         <th>Availability</th>
       </tr>
     </thead>
        <tbody>
          <% @books.each do |book| %>
           <tr>
            <td><%= book.id %></td>
            <td><%= link_to book.name, book_path(book) %></td>
            <td><%= book.availability %></td>
            <td><%= link_to 'edit', edit_book_path(book) %></td>
          </tr>
          <% end %>
        </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <h3>Purchased</h3>
  </div>
  <div class="col-md-4">
    <h3>Sales</h3>
  </div>
</div>
